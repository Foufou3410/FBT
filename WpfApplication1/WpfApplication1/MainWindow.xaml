<Window x:Class="FBT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FBT"
        mc:Ignorable="d"
        Title="Backtest Forwardtest" Height="450" Width="800" Background="LightBlue">
    <Grid Margin="10,0,-18,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="615*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="88,200,657,205" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="46">Payoff</TextBlock>
        <TextBlock Margin="61,267,616,138" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="114" >Valeur du Portefeuille</TextBlock>
        <Button Command="{Binding CalculateCmd}" Margin="601,350,51,38">Calculer</Button>
        <Button Command="{Binding OptionCmd}" Margin="617,24,35,364">Modification Option</Button>
        <TextBlock Text="{Binding ViewPayOff}" Margin="209,197,35,208" Background="White" VerticalAlignment="Center" Height="16" ></TextBlock>
        <TextBlock Text="{Binding ViewPort}" Margin="209,267,35,138" Background="White" VerticalAlignment="Center" Height="16"></TextBlock>
    </Grid>
</Window>
