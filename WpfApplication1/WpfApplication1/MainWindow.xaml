<Window x:Class="FBT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FBT"
        mc:Ignorable="d"
        Title="Backtest Forwardtest" Height="450" Width="800" Background="LightBlue">
    <Grid Margin="10,0,-18,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="615*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Button Command="{Binding CalculateCmd}" Margin="606,158,35,227" Click="Add_Click" > Calculer</Button>
        <TextBlock Text="{Binding ViewPayOff}" Margin="209,199,35,195" Background="White" VerticalAlignment="Center" Height="27"  ></TextBlock>
        <TextBlock Text="{Binding ViewPort}" Margin="209,239,35,158" Background="White" VerticalAlignment="Center" Height="24" ></TextBlock>
        <ComboBox ItemsSource="{Binding valuesType}" Margin="246,25,402,362" SelectedItem="{Binding selectedValuesType}"></ComboBox>
        <TextBox Name="dateBox"  Margin="246,64,402,327"></TextBox>
        <TextBox Text="{Binding estimWindow}" Margin="246,99,402,291"></TextBox>
        <TextBox Margin="246,135,402,258">Not yet</TextBox>
        <Label Margin="85,208,644,185" HorizontalAlignment="Center" VerticalAlignment="Center" Height="28" Width="62">Payoff</Label>
        <Label Margin="57,237,606,158" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="128" >Valeur du Portefeuille</Label>
        <Label Margin="25,35,657,356">Type de données:</Label>
        <Label Margin="25,70,606,317">Date de départ jj/mm/aaaa :</Label>
        <Label Margin="25,104,552,285">Fenêtre d'estimation (nombre entier):</Label>
        <Label Margin="25,136,552,253">Fréquence de rebalancement:</Label>

    </Grid>
</Window>
