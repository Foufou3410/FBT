<UserControl x:Class="FBT.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:local="clr-namespace:FBT"
                 xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
                 mc:Ignorable="d" 
                 Width="1985" Height="1010" Background="LightBlue">
    <Grid HorizontalAlignment="Left" Width="1605" >
        <!-- left panel -->
        <Grid MaxHeight="600" Margin="0,300,900,30" Height="600" VerticalAlignment="Bottom">
            <lvc:CartesianChart Series="{Binding PfOpChart}" LegendLocation="Right" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="2" Grid.ColumnSpan="4" >
                <lvc:CartesianChart.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.399"/>
                        <RotateTransform/>
                        <TranslateTransform X="1.493"/>
                    </TransformGroup>
                </lvc:CartesianChart.RenderTransform>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Sales" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                </lvc:CartesianChart.AxisY>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Months" Labels="{Binding Labels}"></lvc:Axis>
                </lvc:CartesianChart.AxisX>
            </lvc:CartesianChart>
        </Grid>
        <!-- right panel -->
        <Grid MaxHeight="600" Margin="910,300,10,30" Height="600" VerticalAlignment="Bottom">
            <lvc:CartesianChart Series="{Binding TerrorChart}" LegendLocation="Right" RenderTransformOrigin="0.5,0.5"  Grid.RowSpan="2" Grid.ColumnSpan="4" >
                <lvc:CartesianChart.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.399"/>
                        <RotateTransform/>
                        <TranslateTransform X="1.493"/>
                    </TransformGroup>
                </lvc:CartesianChart.RenderTransform>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Sales" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                </lvc:CartesianChart.AxisY>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Months" Labels="{Binding Labels}"></lvc:Axis>
                </lvc:CartesianChart.AxisX>
            </lvc:CartesianChart>
        </Grid>
        <!-- buttons - OHREALLY -->
        <Grid Margin="-18,19,10,-30" Height="1036" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="615*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <Button Command="{Binding CalculateCmd}" Margin="1228,85,0,0" HorizontalAlignment="Left" Width="146" Height="40" VerticalAlignment="Top" >Calculer</Button>
            <TextBlock Text="{Binding ViewPayOff}" Margin="209,200,0,808" Background="White" VerticalAlignment="Center" Height="28" HorizontalAlignment="Left" Width="1351"  ></TextBlock>
            <TextBlock Text="{Binding ViewPort}" Margin="209,242,0,770" Background="White" VerticalAlignment="Center" Height="24" HorizontalAlignment="Left" Width="1351" ></TextBlock>
            <ComboBox ItemsSource="{Binding ValuesType}" Margin="246,25,0,981" SelectedItem="{Binding selectedValuesType}" HorizontalAlignment="Left" Width="124"></ComboBox>
            <DatePicker Name="dateBox" Margin="246,60,0,947" HorizontalAlignment="Left" Width="124" SelectedDate="{Binding theDate,Mode =TwoWay}"></DatePicker>
            <TextBox Text="{Binding EstimWindow}" Margin="246,0,0,911" HorizontalAlignment="Left" Width="124" Height="26" VerticalAlignment="Bottom"></TextBox>
            <TextBox Text="{Binding Frequency, ValidatesOnNotifyDataErrors=True}" Margin="246,136,1225,868">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel>
                            <!-- Placeholder for the TextBox itself -->
                            <AdornedElementPlaceholder x:Name="textBox"/>
                            <ItemsControl ItemsSource="{Binding}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ErrorContent}" Foreground="Red"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
            </TextBox>
















            <Label Margin="88,206,1445,802" HorizontalAlignment="Center" VerticalAlignment="Center" Height="28" Width="62">Payoff</Label>
            <Label Margin="57,239,1410,771" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="128" >Valeur du Portefeuille</Label>
            <Label Margin="25,25,0,0" HorizontalAlignment="Left" Width="198" Height="30" VerticalAlignment="Top">Type de données:</Label>
            <Label Margin="25,60,1381,0" Height="29" VerticalAlignment="Top">Date de départ jj/mm/aaaa :</Label>
            <Label Margin="25,99,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="216">Fenêtre d'estimation (nombre entier):</Label>
            <Label Margin="25,137,0,0" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="198">Fréquence de rebalancement:</Label>


        </Grid>
    </Grid>
</UserControl>